# Environment Configuration for SIH Frontend

# Backend API Configuration
VITE_API_BASE_URL=http://localhost:8000/api/v1
VITE_API_TIMEOUT=30000

# WHO ICD-11 API Configuration  
VITE_WHO_API_BASE_URL=https://id.who.int
VITE_WHO_CLIENT_ID=your_client_id_here
VITE_WHO_CLIENT_SECRET=your_client_secret_here

# Application Configuration
VITE_APP_NAME=NAMASTE-WHO Integration Portal
VITE_APP_VERSION=1.0.0
VITE_DEBUG_MODE=true

# ABHA Configuration
VITE_ABHA_BASE_URL=https://healthidsbx.ndhm.gov.in/api/v1
VITE_ENABLE_ABHA_AUTH=true

# Features Toggle
VITE_ENABLE_WHO_SYNC=true
VITE_ENABLE_MULTI_TIER_MAPPING=true
VITE_ENABLE_REAL_TIME_UPDATES=true
VITE_ENABLE_BULK_OPERATIONS=true

# UI Configuration
VITE_ENABLE_DARK_MODE=true
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_FILE_SIZE=50MB

# Cache Configuration
VITE_CACHE_DURATION=300000
VITE_ENABLE_OFFLINE_MODE=false